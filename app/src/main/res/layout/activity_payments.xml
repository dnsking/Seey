<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentsActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <FrameLayout
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:layout_marginTop="8dp"

            android:layout_gravity="center">
            <io.github.florent37.shapeofview.shapes.CircleView
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:layout_gravity="center"
                app:shape_circle_borderWidth="0dp">

                <ImageView
                    android:id="@+id/userImgView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/textblack"
                    app:cornerRadius="64dp"/>
            </io.github.florent37.shapeofview.shapes.CircleView>



        </FrameLayout>






        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="32sp"
            android:focusableInTouchMode="true"
            android:cursorVisible="false"
            android:focusable="false"
            android:text="$0.00"

            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/inputBtn1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/textblack"
                app:cornerRadius="42dp"
                android:fontFamily="sans-serif-thin"
                android:textSize="42sp"
                android:layout_margin="4dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

            <Button
                android:id="@+id/inputBtn2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/textblack"
                android:fontFamily="sans-serif-thin"
                app:cornerRadius="42dp"
                android:textSize="42sp"
                android:layout_margin="4dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

            <Button
                android:id="@+id/inputBtn3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/textblack"
                app:cornerRadius="42dp"
                android:textSize="42sp"
                android:fontFamily="sans-serif-thin"
                android:layout_margin="4dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/inputBtn4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/textblack"
                app:cornerRadius="42dp"
                android:textSize="42sp"
                android:fontFamily="sans-serif-thin"
                android:layout_margin="4dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

            <Button
                android:id="@+id/inputBtn5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/textblack"
                app:cornerRadius="42dp"
                android:fontFamily="sans-serif-thin"
                android:textSize="42sp"
                android:layout_margin="4dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

            <Button
                android:id="@+id/inputBtn6"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@color/textblack"
                app:cornerRadius="42dp"
                android:textSize="42sp"
                android:fontFamily="sans-serif-thin"
                android:layout_margin="4dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/inputBtn7"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="@color/textblack"
                app:cornerRadius="42dp"
                android:textSize="42sp"
                android:fontFamily="sans-serif-thin"
                android:layout_margin="4dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

            <Button
                android:id="@+id/inputBtn8"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="@color/textblack"
                app:cornerRadius="42dp"
                android:textSize="42sp"
                android:fontFamily="sans-serif-thin"
                android:layout_margin="4dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

            <Button
                android:id="@+id/inputBtn9"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="@color/textblack"
                android:fontFamily="sans-serif-thin"
                app:cornerRadius="42dp"
                android:textSize="42sp"
                android:layout_margin="4dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/inputBtnDot"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="."
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/textblack"
                app:cornerRadius="42dp"
                android:textSize="42sp"
                android:fontFamily="sans-serif-medium"
                android:layout_margin="4dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

            <Button
                android:id="@+id/inputBtn0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/textblack"
                app:cornerRadius="42dp"
                android:textSize="42sp"
                android:fontFamily="sans-serif-thin"
                android:layout_margin="4dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />
            <Button

                android:id="@+id/inputBtnBackspace"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textblack"
                app:cornerRadius="42dp"
                app:iconTint="#424242"
                android:textSize="42sp"
                android:fontFamily="sans-serif-thin"
                android:layout_margin="4dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                app:icon="@drawable/ic_baseline_backspace_24"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                />

        </LinearLayout>

        <Button
            android:id="@+id/sendMoneyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            app:cornerRadius="42dp"
            android:textSize="20sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ani"
        android:visibility="invisible"
        android:layout_width="348dp"
        android:layout_height="348dp"
        android:translationY="-90dp"

        android:layout_margin="16dp"


        android:layout_gravity="center|top"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/rejection"/>

    <WebView
        android:id="@+id/webView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>